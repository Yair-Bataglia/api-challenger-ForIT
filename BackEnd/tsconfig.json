{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",  // Donde se generarán los archivos JavaScript
    "rootDir": "./src",  // Carpeta raíz de tus archivos TypeScript
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",  // Directorio para tipos de terceros
      "./src/types"  // Si tienes tipos personalizados
    ],
    "types": ["node", "express"]  // Asegúrate de que "node" y "express" estén incluidos
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
